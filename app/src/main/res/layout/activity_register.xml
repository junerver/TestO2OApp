<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.junerver.testo2oapp.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/greyblue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/framelayout_back">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/img_back"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_home_as_up_indicator" />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:gravity="left"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_title_text_size" />

    </LinearLayout>

    <!--分割块-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/lightgrey"/>

    <!--登陆框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"

        android:orientation="horizontal">
        <!--对电话号码的输入应该设有相应的正则检验-->
        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone"
            android:hint="手机号：" />
        <!--重新输入-->
        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="50dp">
            <ImageButton
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_close_black_48dp"/>

        </FrameLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@color/lightgrey"/>
    <LinearLayout
        android:id="@+id/linearlayout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一步，获取验证码"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册代表同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/deepgreen"
            android:text="《用户协议》"/>
    </LinearLayout>


</LinearLayout>
