<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.junerver.testo2oapp.activity.BusinessShowActivity"
    android:weightSum="1">

    <!--头像与昵称等信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/greyblue"
        android:orientation="horizontal">
        <!--头像-->
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:background="@drawable/avatar_1"
            android:id="@+id/img_avatar" />
        <!--昵称等信息-->
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄晓明"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/text_username"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共完成233次订单"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家政 清洁"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_favorite_off"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"/>
        </LinearLayout>

    </LinearLayout>
    <!--分割线-->
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="15dp"-->
        <!--android:background="@color/lightgrey"/>-->

    <!--简介-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"

        android:gravity="center_vertical"
        android:text="简介:"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgrey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginLeft="15dp"
        android:id="@+id/text_info"
        android:text="@string/text_default_info"
        />
    <!--分割线-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/lightgrey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"

        android:gravity="center_vertical"
        android:text="商家展示："/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgrey"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="191dp"
        android:layout_height="197dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pic_clean_floor"
        android:layout_weight="0.32" />

</LinearLayout>
